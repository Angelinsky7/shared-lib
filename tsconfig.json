{
    "compilerOptions": {
        "target": "es5",
        "sourceMap": true,
        "module": "system",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": "src"
    },
    "exclude": [
        "node_modules",
        "jspm_packages",
        "typings/main",
        "typings/main.d.ts"
  ]
}